class program{
        void turnright(){
                iterate(3){
                        turnleft()
                }
        }
        void pickBeepers(){
                while(nextToABeeper){
                        pickbeeper()
                        if(frontIsBlocked){
                                if(leftIsClear){
                                        turnleft()
                                } else {
                                        turnright()
                                }
                        }
                        move()
                }
        }
        void searchMoreBeepers(){
                turnright()
                move()
                move()
                while(notNextToABeeper){
                        if(leftIsClear){
                                turnleft()
                                while(notNextToABeeper){
                                        move()
                                }
                        }
                }
        }
        void idle(){
                iterate(300){
                        turnleft()
                }
        }
        void exit(){
                turnright()
                move()
                move()
                while(frontIsClear){
                        move()
                        if(amINotAlone){
                                givebeeper(6)
                                idle()
                                turnoff()
                        }
                }       
        }
        void son(){
                turnright()
                searchMoreBeepers()
                turnright()
                pickBeepers()
                turnleft()
                move()
                move()
                while(amIAlone){
                        turnleft()
                }
                givebeeper(8)
                turnoff()
        }
        void sontwo(){
                while(notNextToABeeper){
                        move()
                }
                clone(son())
                pickBeepers()
                exit()
                idle()
        }
        program(){
                clone(sontwo())
                idle()
                turnoff()
        }
}